<div class="widget full-col">
    <header class="pad">
        <h2>{{ "Settings"|t('form-builder') }}</h2>
    </header>
    <div class="body">
        <div class="list settings-list">
            <div class="list-item">

                <div class="fb-field ">
                    <div class="input-hint">MERCHANT ID</div>
                    <div class="input">
                        <input type="text" name="settings[merchantId]" value="{{ entry.settings['merchantId'] is defined ? entry.settings['merchantId'] : null }}">
                    </div>
                </div>

                <div class="fb-field ">
                    <div class="input-hint">MERCHANT KEY</div>
                    <div class="input">
                        <input type="text" name="settings[merchantKey]" value="{{ entry.settings['merchantKey'] is defined ? entry.settings['merchantKey'] : null }}">
                    </div>
                </div>

                <div class="fb-field ">
                    <div class="input-hint">MERCHANT PIN</div>
                    <div class="input">
                        <input type="text" name="settings[merchantPin]" value="{{ entry.settings['merchantPin'] is defined ? entry.settings['merchantPin'] : null }}">
                    </div>
                </div>

                <div class="fb-field" id="field-type">
                    <div class="input-hint">TYPE</div>
                    <div class="select">
                        <select name="settings[type]">
                            <option value="CreditCard" {% if entry.settings['type'] == 'CreditCard' %}selected{% endif %}>Credit card</option>
                            <option value="ECheckACH" {% if entry.settings['type'] == 'ECheckACH' %}selected{% endif %}>ECheck / ACH</option>
                        </select>
                    </div>
                </div>

                <div class="fb-field" id="field-pin">
                    <div class="input-hint">TEST MODE</div>
                    <div class="select">
                        <select name="settings[testMode]">
                            <option value="false" {% if entry.settings['testMode'] == 'false' %}selected{% endif %}>Disabled</option>
                            <option value="true" {% if entry.settings['testMode'] == 'true' %}selected{% endif %}>Enabled</option>
                        </select>
                    </div>
                </div>

                <div class="fb-field" id="field-currency">
                    <div class="input-hint">CURRENCY</div>
                    <div class="input">
                        <input type="text" name="settings[currency]" value="{{ entry.settings['currency'] is defined ? entry.settings['currency'] : null }}">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="widget full-col">
    <header class="pad">
        <h2>{{ "Details"|t('form-builder') }}</h2>
    </header>
    <div class="body">
        <ul class="list-dots theme-green">
            <li>{{ 'Category'|t('form-builder') }}: {{ entry.category }}</li>
            {#{% if entry.frontend %}#}
                {#<li>{{ 'Will display on the frontend'|t('form-builder') }}</li>#}
            {#{% endif %}#}
        </ul>
    </div>
</div>
